                <div class="line"></div>
                <div class="city" id="Naples">Naples</div>
                <div class="line"></div>
                <div class="city" id="Santorini">Santorini</div>
                <div class="line"></div>
                <div class="city" id="Paris">Paris</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


<script>
        // Define your trip schedule with dates and cities
        const tripSchedule = [
            { city: "London", date_visit: "2024-07-01", date_leave: "2024-07-02" },
            { city: "Amsterdam", date_visit: "2024-07-03", date_leave: "2024-07-04" },
            { city: "Venice", date_visit: "2024-07-05", date_leave: "2024-07-06" },
            { city: "Florence", date_visit: "2024-07-07", date_leave: "2024-07-08" },
            { city: "Rome", date_visit: "2024-07-09", date_leave: "2024-07-10" },
            { city: "Naples", date_visit: "2024-07-13", date_leave: "2024-07-16" },
            { city: "Santorini", date_visit: "2024-07-19", date_leave: "2024-07-21" },
            { city: "Paris", date_visit: "2024-07-22", date_leave: "2024-07-24" }
        ];

        // Function to update city colors based on the current date
        function updateCityColors() {
            const today = new Date();
            console.log(today);
            tripSchedule.forEach(schedule => {
                const cityElement = document.getElementById(schedule.city);
                if (new Date(schedule.date_visit) < today && new Date(schedule.date_leave) < today){
                    cityElement.classList.add("visited");
                }
                else if (new Date(schedule.date_visit) <= today && new Date(schedule.date_leave) >= today) {
                    cityElement.classList.add("current");
                }

            });
        }

        // Call the function on page load
        window.onload = updateCityColors;
    </script>