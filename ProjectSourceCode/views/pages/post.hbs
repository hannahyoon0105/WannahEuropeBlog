<div class="container">
  <div class="row">
    <div class="col-sm">
    </div>

    <div class="col-sm">
      <p>{{> message}}</p>
      <h1>Create Post</h1>
      <p></p>
      <form action="/create-post" method="POST"> 
        <div class="form-group">
          <h4>Post Information</h4>
          <label for="caption">Caption:</label>
          <input type="text" id="caption" name="caption" class="form-control">
        </div>
        <div class="form-group">
          <label for="image_filepath">Image URL:</label>
          <input type="text" id="image_filepath" name="image_filepath" class="form-control" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div class="col-sm">
    </div>
  </div>
</div>
